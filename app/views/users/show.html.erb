<p id="notice"><%= notice %></p>

<h1><%= @user.email %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Seller Commission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.quotations.each do |quotation| %>
      <tr>
        <td><%= quotation.name %></td>
        <td><%= quotation.value %></td>
        <td><%= quotation.seller_commission %></td>
        <td><%= link_to 'Edit', edit_quotation_path(quotation) %></td>
        <td><%= link_to 'Destroy', quotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>Acumulado de Vendas</h1>
